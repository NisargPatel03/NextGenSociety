<%- include('partials/header') %>
<div class="container">
    <h2>Watchman Signup</h2>
    <form action="/watchman/signup" method="POST">
        <div>
            <label>Email</label>
            <input type="email" name="username" required />
        </div>
        <div>
            <label>Password</label>
            <input type="password" name="password" required />
        </div>
        <div>
            <label>First name</label>
            <input type="text" name="firstName" />
        </div>
        <div>
            <label>Last name</label>
            <input type="text" name="lastName" />
        </div>
        <div>
            <label>Phone</label>
            <input type="number" name="phoneNumber" required />
        </div>
        <div>
            <label>Society</label>
            <select name="societyName" required>
                <% (societies||[]).forEach(function(s){ %>
                    <option value="<%= s.societyName %>"><%= s.societyName %></option>
                <% }) %>
            </select>
        </div>
        <div>
            <label>Flat (optional)</label>
            <input type="text" name="flatNumber" placeholder="e.g. GATE" />
        </div>
        <button type="submit">Create Watchman</button>
    </form>
    <p style="margin-top:12px;">Already have account? <a href="/watchman/login">Login</a></p>
</div>
<%- include('partials/footer') %>


