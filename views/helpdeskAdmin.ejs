<!-- View all complaints ~admin -->
<%- include('partials/header') %>

<div style="padding:4%; padding-top: 0%; font-family:sans-serif; font-size:15px;">
  <h2 style="background-color:rgb(51, 51, 51); padding:18px;color:white; text-align: center; border-radius: 1rem; font-size: 20px; max-width: 1000px; margin:auto; margin-bottom: 10px;">
    Community complaints
  </h2>
  <div class="container container-profile">
    <row>
      <col-4>
          <a href="/complaint" class="btn btn-danger btn-md text-uppercase center" style="border-radius:3rem; max-width:180px; display: block; margin: auto;">
            Raise Complaint
          </a>
      </col-4>
    </row>
    <div class="row">
      <% users.forEach(function(user){ %>
        <% if(user.complaints.length){ %>
        <div class="col">
          <div class="card card-profile my-5" style="margin-top: 10px;">
            <div class="card-body" style="padding:3% 8% 3%;">
              <div>
                <i class="fas fa-plus-circle"></i> <b><%= user.complaints.slice(-1)[0].category %></b>
                <p style="padding-left: 20px; color: grey;">
                  <%= user.complaints.slice(-1)[0].date %> - <%= user.complaints.slice(-1)[0].type %><br>
                  Raised by <%=user.firstName%> <%=user.lastName%>
                </p>
                <p style="padding-left: 20px"><%= user.complaints.slice(-1)[0].description %></p>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      <% }) %>
    </div>    
  </div>
</div>

<%- include('partials/footer') %>